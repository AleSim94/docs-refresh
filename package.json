{
  "name": "@neo4j/docs",
  "version": "1.0.0",
  "description": "Neo4j Docs builder",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:developer && npm run build:labs && npm run build:labs-docs && npm run build:docs",
    "build:developer": "antora --fetch --stacktrace developer.yml",
    "build:labs": "antora --fetch --stacktrace labs.yml",
    "build:labs-docs": "antora --fetch --stacktrace labs-docs.yml",
    "build:docs": "antora --fetch --stacktrace docs.yml",
    "watch:developer": "npm-watch build:developer",
    "watch": "npm-watch"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@antora/cli": "^2.3.3",
    "@antora/site-generator-default": "^2.3.3",
    "npm-watch": "^0.6.0"
  },
  "watch": {
    "build:developer": {
      "patterns": [
        "asciidoc/developer"
      ],
      "extensions": "adoc"
    },
    "build:labs": {
      "patterns": [
        "asciidoc/labs"
      ],
      "extensions": "adoc"
    }
  }
}
